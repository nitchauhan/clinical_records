<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_img"
    tools:context="com.example.clinicalrecord.Dashboard" >

    <LinearLayout
        android:id="@+id/linerLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_edge"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_nof_doc"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:text="No of Doc : " />

        <Button
            android:id="@+id/btn_nof_pat"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="No of patients : " />

        <Button
            android:id="@+id/btn_goto_patientview"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-40dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="175dp"
            android:layout_weight="0.02"
            android:background="@drawable/rounded_edge_btn"
            android:paddingLeft="30dp"
            android:paddingRight="19dp"
            android:text="View\n patients"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_goto_doctorview"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.05"
            android:background="@drawable/rounded_edge_btn"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="View \n Doctors"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_goto_newadmit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:layout_marginBottom="30dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.01"
            android:background="@drawable/rounded_edge_btn"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Add New Admit"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>