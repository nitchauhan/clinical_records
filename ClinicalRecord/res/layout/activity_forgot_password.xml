<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#68a0b0"
    tools:context="com.example.clinicalrecord.ForgotPassword" >

    <LinearLayout
         android:id="@+id/linerLayout1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/tv_goto_reg"
         android:layout_centerVertical="true"
         android:background="@drawable/rounded_edge"
         android:gravity="center"
         android:orientation="vertical" >
         
         <LinearLayout
		      android:layout_width="match_parent"
		      android:layout_height="wrap_content"
		      android:orientation="horizontal"  >
		      
             <EditText
             android:id="@+id/et_emailid"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="0dp"
             android:layout_marginTop="34dp"
             android:ems="10"
             android:hint="Email ID"
             android:inputType="textEmailAddress" />

         <Button
             android:id="@+id/bt_send"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/rounded_edge_btn"
             android:text="Send"
             android:layout_marginTop="22dp"
             
             android:layout_alignRight = "@+id/et_emailid"
              />
             
             
             
         </LinearLayout>
         
          <LinearLayout
		      android:layout_width="match_parent"
		      android:layout_height="wrap_content"
		      android:orientation="horizontal"  >
         
         
         <EditText
             android:id="@+id/et_otp"
             android:layout_width="158dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:ems="10"
             android:hint="OTP"
             android:inputType="number" />

         <Button
             android:id="@+id/bt_check"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="55dp"
             android:layout_marginTop="22dp"
             android:background="@drawable/rounded_edge_btn"
             android:text="Check" />
         
         </LinearLayout>

         <EditText
             android:id="@+id/et_password"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/et_otp"
             android:layout_centerVertical="true"
             android:ems="10"
             android:hint="Password"
             android:inputType="textPassword" >

             <requestFocus />
         </EditText>

         <EditText
             android:id="@+id/et_confirm_password"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/et_password"
             android:layout_below="@+id/et_password"
             android:layout_marginTop="22dp"
             android:ems="10"
             android:hint="Confirm Password"
             android:inputType="textPassword" />

         <Button
             android:id="@+id/bt_change_password"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_weight="0.02"
             android:background="@drawable/rounded_edge_btn"
             android:layout_marginBottom="5dp"
             android:text="Chnage Password" />

    </LinearLayout>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:text="Forgot Password"
         android:textSize="25sp" />

     <TextView
         android:id="@+id/tv_backtologin"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/linerLayout1"
         android:layout_below="@+id/linerLayout1"
         android:layout_marginRight="14dp"
         android:layout_marginTop="28dp"
         android:text="Back to login"
         android:textColor="@android:color/white"
         android:textSize="20sp" />
    

</RelativeLayout>
